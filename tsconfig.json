{
  "compilerOptions": {
    "target": "es2016",   
    "module": "commonjs",                        
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src/**/*", "src/utils/**/*", "types/**/*"],
  "exclude": ["node_modules", "dist"]
}
